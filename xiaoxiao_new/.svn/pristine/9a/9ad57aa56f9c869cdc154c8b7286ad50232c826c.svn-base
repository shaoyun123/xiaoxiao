<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ page isELIgnored="false"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<style>
.table th {
	text-align: center;
}

.table td {
	text-align: center;
}

#navigation, #navigation li ul {
	list-style-type: none;
}

#navigation {
	margin: 9px;
	vertical-align: middle;
}

#wapper {
	height: 50px;
	position: relative;
}

#wapper ul {
	text-align: center;
	width: auto;
	position: absolute;
	margin: 0;
	left: 0%;
}

#navigation li {
	float: left;
	text-align: center;
	position: relative;
}

#navigation li a:link, #navigation li a:visited {
	display: block;
	text-decoration: none;
	color: #000;
	width: 114px;
	height: 30px;
	line-height: 30px;
	border: 1px solid #fff;
	border-width: 1px 1px 0 0;
	background: #c5dbf2;
	padding-left: 10px;
}

#navigation li a:hover {
	color: #fff;
	background: #2687eb;
}

#navigation li ul li a:hover {
	color: #fff;
	background: #6b839c;
}

#navigation li ul {
	display: none;
	position: absolute;
	top: 30px;
	left: 0;
	margin-top: 1px;
	width: 110px;
}

#navigation li ul li ul {
	display: none;
	position: absolute;
	top: 0px;
	left: 130px;
	margin-top: 0;
	margin-left: 1px;
	width: 110px;
}
}
</style>
<div class="row-fluid">
	<div class="box span12">
<!-- 				<div class="box-header"> -->
		<div id="wrapper">
			<ul id="navigation">
				<li><a href="javascript:void(0);"
					onclick="toContentPage('getxiaozu?id=${kecheng.ID}')">学生分组</a></li>
				<li><a href="javascript:void(0);"
					onclick="toContentPage('getdazu?id=${kecheng.ID}')">大组分组</a></li>
				<li><a href="javascript:void(0);"
					onclick="toContentPage('getwendang?kechengid=${kecheng.ID}')">课程简报</a></li>
				<li><a href="javascript:void(0);"
					onclick="toContentPage('getkaoping?id=${kecheng.ID}')">课程考评</a></li>
			</ul>
		</div>
		<c:if test="${not empty unfenzu}">
			<div class="box-icon">
				<a href="javascript:toContentPage('addxiaozu?id=${kecheng.ID}&fendazu=${kecheng.fendazu}&fenxiaozu=${kecheng.fenxiaozu}&xiaozurongliang=${kecheng.xiaozurongliang}')"><i
					title="添加小组" class="icon-plus"></i></a>
			</div>
		</c:if>
	</div>
<!-- 	</div> -->

	<div class="box-content">
		<form action="" id="forms" class="form-horizontal" method="post">
			<input type="hidden" name="kechengid" id="kechengid"
				value="${kecheng.ID}">
			<input type="hidden" name="fenxiaozu" id="fenxiaozu"
				value="${kecheng.fenxiaozu}">
				<input type="hidden" name="fendazu" id="fendazu"
				value="${kecheng.fendazu}">
			<div class="control-group" style="display: inline-block;">
				<label class="control-label">小组容量：</label>
				<div class="controls">
					<c:choose>
						<c:when test="${kecheng.fenxiaozu==1}"><input id="rongliang" name="rongliang" type="text"
						value="${kecheng.xiaozurongliang}" /></c:when>
						<c:otherwise>
						<input id="rongliang" name="rongliang" type="text" style="color: red;" disabled="disabled"
						value="不分小组" />
						</c:otherwise>
					</c:choose>
				</div>
			</div>
			<div class="control-group" style="display: inline-block;">
				<!-- 				<label class="control-label" for="focusedInput"></label> -->
				<!-- 				<div class="controls"> -->
				<button type="button" style="margin-left: 5px;"
					class="btn btn-success" onclick="save(${kecheng.ID})">保存</button>
				<!-- 				</div> -->
			</div>
		</form>

		<table
			class="table table-bordered table-striped table-condensed bootstrap-datatable ">
			<thead>
				<tr>
					<th>组名</th>
					<th>成员</th>
					<!-- 					<th>修改</th> -->
					<th>解散</th>
					<th>详情</th>
				</tr>
			</thead>
			<tbody>
				<c:forEach items="${xiaozuxinxis}" var="xiaozuxinxi">
					<tr>
						<td>${xiaozuxinxi.xueXiZuMing }</td>
						<td>
							<table
								class="table table-bordered table-striped table-condensed bootstrap-datatable ">
								<tbody>
									<c:forEach items="${xiaozuxinxi.chengyuan}" var="chengyuan">
										<tr>
											<td>${chengyuan.banjimingcheng}</td>
											<td>${chengyuan.xuehao}</td>
											<td>${chengyuan.xingming}</td>
										</tr>
									</c:forEach>
								</tbody>
							</table>
						</td>
						<td><button onclick="delxiaozu(${xiaozuxinxi.ID})"
								type="button" class="btn btn-danger">解散</button></td>
						<td><button
								onclick="toContentPage('xiaozudetail?id=${xiaozuxinxi.ID}&fenxiaozu=${kecheng.fenxiaozu}')"
								type="button" class="btn btn-primary">详情</button></td>
					</tr>
				</c:forEach>
			</tbody>
		</table>
		<div>
			<button onclick="toContentPage('weifenzustu?id=${kecheng.ID}')"
				type="button" class="btn btn-danger">未分组学生</button>
		</div>
		<div class="pagination pagination-centered">
			<ul>
				<c:if test="${page >1}">
					<li><a href="JavaScript:void(0);"
						onclick="toContentPage('getxiaozu?id=${kecheng.ID}')">首页</a></li>
				</c:if>
				<c:if test="${page > 1}">
					<li><a href="JavaScript:void(0);"
						onclick="toContentPage('getxiaozu?id=${kecheng.ID}&page=${page-1}')">上一页</a></li>
				</c:if>
				<li class="active"><a href="JavaScript:void(0);">第${page}页</a>
				</li>
				<c:if test="${page < pages}">
					<li><a href="JavaScript:void(0);"
						onclick="toContentPage('getxiaozu?id=${kecheng.ID}&page=${page+1}')">下一页</a></li>
				</c:if>
				<c:if test="${page < pages}">
					<li><a href="JavaScript:void(0);"
						onclick="toContentPage('getxiaozu?id=${kecheng.ID}&page=${pages}')">尾页</a></li>
				</c:if>
			</ul>
		</div>
	</div>
</div>

<script type="text/javascript">
	function save(id) {
		if ($("#rongliang").val() == "") {
			alert("请输入小组人数！");
			return false;
		} 
		
			$.ajax({
				type : "POST",
				url : 'saveupdatekecheng',
				data : $("#forms").serialize(),
				dataType : 'json',
				cache : false,
				timeout : 5000,
				async : true,
				success : function(data) {
					if (data.status == "success") {
						alert("修改成功");
						toContentPage("getxiaozu?id="+id);
					} else {
						alert("修改失败");
						toContentPage("getxiaozu?id="+id);
					}
				},
				error : function() {
					alert("fail");
					toContentPage("getxiaozu?id="+id);
				}
			});
	}
	
	function delxiaozu(xiaozuid) {
		var id = ${kecheng.ID};
		var fendazu = $("#fendazu").val();
		var fenxiaozu = $("#fenxiaozu").val();
		if (cfm()) {
			$.ajax({
				type : "POST",
				url : 'delxiaozu',
				data : {"xiaozuid":xiaozuid,"fendazu":fendazu,"fenxiaozu":fenxiaozu},
				dataType : 'json',
				cache : false,
				timeout : 5000,
				async : true,
				success : function(data) {
					if (data.status == "success") {
						alert("success");
						toContentPage("getxiaozu?id="+id);
					} 
					if (data.status == "limited") {
						alert("受限!");
						toContentPage("getxiaozu?id="+id);
					}
					if (data.status == "fail") {
						alert("fail!");
						toContentPage("getxiaozu?id="+id);
					}
				},
				error : function() {
					alert("error");
					toContentPage("getxiaozu?id="+id);
				}
			});
		}
	}
	
	function cfm() {
		if (confirm("确认删除？") == true) {
			return true;
		} else {
			return false;
		}
	}
</script>